app.get('/', (_, res) => res.render('home'));

/* â”€â”€ mount the â€œtableâ€ feature â”€â”€ */
app.use('/', tableRouter);        // /table & /search now live

/* â”€â”€ go â”€â”€ */
app.listen(PORT, () =>
  console.log(`ðŸ’»  http://localhost:${PORT}  (Ctrl-C to quit)`));

